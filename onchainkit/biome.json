{
  "$schema": "https://biomejs.dev/schemas/1.8.0/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "indentWidth": 2,
    "indentStyle": "space",
    "ignore": ["package.json"]
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "lineWidth": 80,
      "arrowParentheses": "always",
      "bracketSameLine": false,
      "quoteStyle": "single",
      "jsxQuoteStyle": "double",
      "indentWidth": 2,
      "indentStyle": "space",
      "semicolons": "always",
      "trailingCommas": "all"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "nursery": {
        "useSortedClasses": "error"
      }
    },
    "ignore": ["site/vocs.config.tsx", "src/internal/form/useDebounce.ts"]
  },
  "json": {
    "formatter": {
      "trailingCommas": "none"
    }
  },
  "files": {
    "ignore": [
      ".yarn",
      ".changeset",
      ".next",
      "coverage",
      "esm",
      "framegear",
      "site/docs/dist/"
    ]
  }
}
